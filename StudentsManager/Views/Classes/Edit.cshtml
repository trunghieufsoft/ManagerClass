@model StudentsManager.Models.ClassModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Create Class</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-md-12" style="margin-bottom: 10px;">
            @Html.ActionLink("Back to List", "Index")
        </div>
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Information Class
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger col-md-offset-2" })
                            <div class="form-group" style="display: none">
                                <div class="col-lg-4 col-md-6">
                                    @Html.EditorFor(model => model.ClassId, new { type = "hidden", htmlAttributes = new { @class = "form-control item", @placeholder = "Class ID", @required = "", @maxlength = "20", @pattern = "^[a-zA-Z0-9_.-]*$" } })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2" for="ClassId">ClassName:</label>
                                <div class="col-lg-4 col-md-6">
                                    @Html.EditorFor(model => model.ClassName, new { htmlAttributes = new { @class = "form-control item", @placeholder = "Class Name", @required = "", @maxlength = "50" } })
                                    @Html.ValidationMessageFor(model => model.ClassName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" class="btn btn-success" value="submit" />
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section JavaScript{
    <script>
        $('.btn').off('click').on('click', function () {
            var data = {
                ClassId: $('#ClassId').val(),
                ClassName: $('#ClassName').val(),
            };
            $.ajax({
                url: '/classes/update',
                type: 'POST',
                dataType: 'json',
                data: {
                    data: JSON.stringify(data)
                },
                success: function (response) {
                    if (response.status) {
                        alert('Successfully updated object!')
                        window.location.href = "/classes";
                    }
                }
            });
        });
    </script>
}