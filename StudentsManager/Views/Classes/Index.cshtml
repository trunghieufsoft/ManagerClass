@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Classes Data List</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12" style="margin-bottom: 10px;">
            @Html.ActionLink("Create New", "create")
        </div>
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Table Data List Of Classes
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">
                            <div class="col-sm-6 col-sm-offset-6">
                                <div id="dataTables-example_filter" class="dataTables_filter">
                                    <label>Search:&nbsp;&nbsp;<input type="search" id="searchClasses" class="form-control input-sm" placeholder="search id or name" aria-controls="dataTables-example"></label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr role="row">
                                            <th style="text-align: center;  width: 8%">Class Id</th>
                                            <th style="text-align: center; width: 20%">Class Name</th>
                                            <th style="text-align: center; width: 10%">Total</th>
                                            <th style="text-align: center; width: 22%">Create Day</th>
                                            <th style="text-align: center; width: 22%">Update Day</th>
                                            <th style="text-align: center; width: 18%"></th>
                                        </tr>
                                    </thead>
                                    <tbody id="tblData"></tbody>
                                </table>
                                <script id="data-template" type="x-tmpl-mustache">
                                    <tr>
                                        <td style="text-align: center;">
                                            {{ClassId}}
                                        </td>
                                        <td>
                                            {{ClassName}}
                                        </td>
                                        <td style="text-align: center;">
                                            {{StudTotal}}
                                        </td>
                                        <td style="text-align: center;">
                                            {{CreateAt}}
                                        </td>
                                        <td style="text-align: center;">
                                            {{UpdateAt}}
                                        </td>
                                        <td class="cursor" style="text-align: center;">
                                            <a href="/classes/edit?id={{ClassId}}" class="">Edit </a>
                                            <a data-id="{{ClassId}}" class="delete"> Delete</a>
                                        </td>
                                    </tr>
                                </script>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_info" id="dataTables-example_info" role="status" aria-live="polite"></div>
                            </div>
                            <div class="col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers" id="pagination"></div>
                            </div>
                        </div>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>

@section JavaScript {
    <script src="~/Scripts/plugins/mustache.min.js"></script>
    <script src="~/Scripts/plugins/jquery.twbsPagination.min.js"></script>
    <script src="~/Scripts/controller/ClassesController.js"></script>
}