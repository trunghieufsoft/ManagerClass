@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_Layout.cshtml";
}

@section Css {
    <link href="~/Assets/select2/select2.min.css" rel="stylesheet" />
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">List of data of students enrolled in class</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12" style="margin-bottom: 10px;">
            @Html.ActionLink("Create New", "create")
        </div>
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    List of data of students enrolled in class
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">
                            <div class="col-sm-6 col-sm-offset-6">
                                <div id="dataTables-example_filter" class="dataTables_filter">
                                    <label>Classes:&nbsp;&nbsp;
                                        @Html.DropDownList("ClassId", (IEnumerable<SelectListItem>)ViewBag.ClassList, new { @class = "form-control" })
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                        <tr role="row">
                                            <th style="text-align: center; width: 16%;">Full Name</th>
                                            <th style="text-align: center; width: 24%;">Address</th>
                                            <th style="text-align: center; width: 10%;">Birth Day</th>
                                            <th style="text-align: center; width: 10%;">Phone</th>
                                            <th style="text-align: center; width: 7%;">Gender</th>
                                            <th style="text-align: center; width: 10%;">Registration Date</th>
                                            <th style="text-align: center; width: 10%;">Changed Date</th>
                                            <th style="text-align: center; width: 13%;"></th>
                                        </tr>
                                    </thead>
                                    <tbody id="tblData"></tbody>
                                </table>
                                <script id="data-template" type="x-tmpl-mustache">
                                    <tr>
                                        <td style="text-align: center;">
                                            {{FullName}}
                                        </td>
                                        <td>
                                            {{Address}}
                                        </td>
                                        <td style="text-align: center;">
                                            {{BirthDay}}
                                        </td>
                                        <td>
                                            {{Phone}}
                                        </td>
                                        <td style="text-align: center;">
                                            {{{Gender}}}
                                        </td>
                                        <td style="text-align: center;">
                                            {{CreateAt}}
                                        </td>
                                        <td style="text-align: center;">
                                            {{UpdateAt}}
                                        </td>
                                        <td class="cursor" style="text-align: center;">
                                            <a data-id="{{StudId}}" class="edit">Edit </a>
                                            <a data-id="{{StudId}}" class="delete"> Delete</a>
                                        </td>
                                    </tr>
                                </script>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="dataTables_info" id="dataTables-example_info" role="status" aria-live="polite"></div>
                            </div>
                            <div class="col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers" id="pagination"></div>
                            </div>
                        </div>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>

@section JavaScript {
    <script src="~/Scripts/plugins/mustache.min.js"></script>
    <script src="~/Scripts/plugins/jquery.twbsPagination.min.js"></script>
    <script src="~/Assets/select2/select2.min.js"></script>
    <script src="~/Scripts/controller/HomeController/HomeController.js"></script>
    <script>
        $(document).ready(function() {
            $("#ClassId").select2();
        });
    </script>
}